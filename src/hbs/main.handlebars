<!DOCTYPE html>
<html lang="en">
  {{> components/head}}
  <body class="page">
    {{> components/header}}
    <main class="content">
      <section class="recent-post content__section page__section">
        <h2 class="content__section-headline">Recent Post</h2>
        <ul class="recent-post__list list">
          <li class="recent-post__list-item">
            <article class="post-preview post-preview_place_recent-post">
              <p class="post-preview__category">Travel</p>
              <h3 class="post-preview__title post-preview__title_size_small">
                Top 10 beautiful Place in Bangladesh
              </h3>
              <div class="post-preview__info">
                <span class="post-preview__info-element post-preview__date"
                  >March 25, 2021</span
                >
                <span
                  class="post-preview__info-element post-preview__time-to-read"
                  >4 min read</span
                >
              </div>
              <a
                class="post-preview__learn-more-btn link link_type_learn-more"
                href="#"
                target="_blank"
                >Read Article
              </a>
            </article>
          </li>
        </ul>
      </section>

      <section class="latest-post content__section page__section">
        <h2 class="content__section-headline">Latest Post</h2>
        <ul class="latest-post__list list">
          <li class="latest-post__list-item">
            <img
              class="latest-post__image"
              src="../images/bangladesh.jpg"
              alt="Bangladesh"
            />
            <article class="post-preview post-preview_place_lates-post">
              <p class="post-preview__category">Travel</p>
              <h3 class="post-preview__title post-preview__title_size_small">
                Top 10 beautiful Place in Bangladesh
              </h3>
              <div class="post-preview__info">
                <span class="post-preview__info-element post-preview__date"
                  >March 25, 2021</span
                >
                <span
                  class="post-preview__info-elementpost-preview__time-to-read"
                  >4 min read</span
                >
              </div>
              <a
                class="post-preview__learn-more-btn link link_type_learn-more"
                href="#"
                target="_blank"
                >Read Article
              </a>
            </article>
          </li>
        </ul>
      </section>

      <section class="featured-post content__section page__section">
        <h2 class="content__section-headline">Featured Post</h2>
        <ul class="featured-post__list list">
          <li class="featured-post__list-item">
            <img
              class="featured-post__image"
              src="../images/mountains.jpg"
              alt="Mountains"
            />
            <article class="post-preview post-preview_place_featured-post">
              <p class="post-preview__category">Travel</p>
              <h3 class="post-preview__title post-preview__title_size_small">
                Top 10 beautiful Place in Bangladesh
              </h3>
              <div class="post-preview__info">
                <span class="post-preview__info-element post-preview__date"
                  >March 25, 2021</span
                >
                <span
                  class="post-preview__info-element post-preview__time-to-read"
                  >4 min read</span
                >
              </div>
              <a
                class="post-preview__learn-more-btn link link_type_learn-more"
                href="#"
                target="_blank"
                >Read Article
              </a>
            </article>
          </li>
        </ul>
      </section>
    </main>
    {{> components/footer}}
  </body>
</html>
